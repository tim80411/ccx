#!/usr/bin/env node

const { execSync, spawn } = require('child_process');
const fs = require('fs');
const path = require('path');
const os = require('os');
const https = require('https');

const PACKAGE_VERSION = require('../package.json').version;
const GITHUB_REPO = 'tim80411/ccx';

function getPlatformBinary() {
  const platform = os.platform();
  const arch = os.arch();

  if (platform === 'darwin' && arch === 'arm64') {
    return 'ccx-darwin-arm64';
  } else if (platform === 'darwin' && arch === 'x64') {
    return 'ccx-darwin-x64';
  } else if (platform === 'linux' && arch === 'x64') {
    return 'ccx-linux-x64';
  } else {
    console.error(`Unsupported platform: ${platform}-${arch}`);
    console.error('Supported platforms: darwin-arm64, darwin-x64, linux-x64');
    process.exit(1);
  }
}

function getBinaryPath() {
  const binaryName = getPlatformBinary();
  return path.join(__dirname, binaryName);
}

function downloadBinary(url, dest) {
  return new Promise((resolve, reject) => {
    const file = fs.createWriteStream(dest);

    const request = (url) => {
      https.get(url, (response) => {
        if (response.statusCode === 302 || response.statusCode === 301) {
          request(response.headers.location);
          return;
        }

        if (response.statusCode !== 200) {
          reject(new Error(`Failed to download: ${response.statusCode}`));
          return;
        }

        response.pipe(file);
        file.on('finish', () => {
          file.close();
          fs.chmodSync(dest, 0o755);
          resolve();
        });
      }).on('error', (err) => {
        fs.unlink(dest, () => {});
        reject(err);
      });
    };

    request(url);
  });
}

async function ensureBinary() {
  const binaryPath = getBinaryPath();

  if (fs.existsSync(binaryPath)) {
    return binaryPath;
  }

  const binaryName = getPlatformBinary();
  const downloadUrl = `https://github.com/${GITHUB_REPO}/releases/download/v${PACKAGE_VERSION}/${binaryName}`;

  console.log(`Downloading ${binaryName}...`);

  try {
    await downloadBinary(downloadUrl, binaryPath);
    console.log('Download complete.');
    return binaryPath;
  } catch (err) {
    console.error(`Failed to download binary: ${err.message}`);
    console.error(`URL: ${downloadUrl}`);
    console.error('Please check if the release exists on GitHub.');
    process.exit(1);
  }
}

async function main() {
  const binaryPath = await ensureBinary();

  const child = spawn(binaryPath, process.argv.slice(2), {
    stdio: 'inherit'
  });

  child.on('close', (code) => {
    process.exit(code);
  });
}

main();
